@model TenXOne.ViewModels.FinancialItemsViewModel

<div asp-validation-summary="All" class="alert alert-danger" role="alert">
</div> 

<div class="form-inline container">
    <div class="form-group ol-xs-12 col-sm-6 col-md-3">
        <select class="form-control" 
            asp-for="PartnerID" 
            asp-items="@Model.PartnerList" 
            required="required">
            <option>Please select partner</option>
        </select>
    </div>
    <div class="form-group ol-xs-12 col-sm-6 col-md-3">
        <input type="date" class="form-control"
            asp-for="Date" placeholder="Date"
            required="required">
    </div>
    <div class="form-group ol-xs-12 col-sm-6 col-md-3">
        <input type="number" class="form-control"
            asp-for="Amount" placeholder="Amount"
            required="required">
    </div>
    <div class="form-group ol-xs-12 col-sm-6 col-md-3">
        <button type="submit" class="btn btn-info">Add Item</button>
    </div>
</div>